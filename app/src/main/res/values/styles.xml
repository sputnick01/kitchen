<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gradStart</item>
        <item name="colorPrimaryDark">@color/dark_gray_status</item>
        <item name="colorAccent">#219EE9</item>
        <item name="android:colorControlNormal">#219EE9</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="RegistrationEditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <color name="white">#ffffff</color>
    <color name="gray">#c4c4c4</color>
    <color name="dark_gray">#3f3f3f</color>
    <color name="dark_gray_status">#2a2a2a</color>

    <style name="ShapeAppearanceOverlay.CornerShape" parent="">
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>